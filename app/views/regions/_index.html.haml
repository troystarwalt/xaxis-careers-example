.regions-container
  .regions-area
    .row
      -@regions.all.each do |region|
        .text-center.region.col-sm-6.col-md-3
          =link_to region_path(region.slug) do
            -if region.slug == 'europe-middle-east'
              %h2=region.name.upcase
            -else
              %h2=region.name.upcase.gsub(' ', '<br>').html_safe
            %hr
          .job-openings-count
            = region.job_count
            Openings
