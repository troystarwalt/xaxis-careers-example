!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= @title
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag src="https://use.fontawesome.com/fafebbc844.js"
    = javascript_include_tag src="https://npmcdn.com/masonry-layout@4.1/dist/masonry.pkgd.min.js"
    = javascript_include_tag src="https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js"
    = csrf_meta_tags
  %body{class: "#{controller_name} #{action_name}"}
    = render partial: 'partials/nav'
    .content-wrapper
      = yield
      = render partial: 'partials/footer'
