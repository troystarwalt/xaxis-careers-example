= form_for @location, html: {multipart: true} do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = image_tag(@location.hero_image_url) if @location.hero_image?
    = f.label :hero_image
    = f.file_field :hero_image
  -if @location.hero_image?
    .field
      = f.label :remove_image
      = f.check_box :remove_avatar
  .actions
    = f.submit 'Save'
