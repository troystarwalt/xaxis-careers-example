.job-show
  %h2.title-text.text-center
    = @job.title
  .container.job-show-body
    .job-subtitle
      = @job.subsidiary_name
      |
      = @job.department
      |
      = @job.location_city
      |
      = @job.location_country
    .job-description_detailed
      = @job.description.html_safe

    =link_to "apply", @job.apply_link, class: 'btn btn-primary btn-lg apply-btn'
    =link_to "apply later", "mailto:?subject=Apply for #{@job.title} at #{@job.subsidiary_name}&body=Don't forget to apply for the #{@job.title} position at #{@job.subsidiary_name}, here: #{job_url(@job.e_id)}", class: 'btn btn-primary btn-lg apply-btn'

  .like-listings
    %h3.text-center Related Positions
    = render partial: 'job_list', locals: {jobs: @jobs}
